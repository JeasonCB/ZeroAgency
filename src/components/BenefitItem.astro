---
export interface Props {
    image: string;
    title: string;
    description: string;
    reverse?: boolean;
}

const { image, title, description, reverse = false } = Astro.props;
const flexDirection = reverse ? "md:flex-row-reverse" : "md:flex-row";
---

<div class={`flex flex-col ${flexDirection} items-center gap-10 mb-12`}>
    <div class="md:w-1/2">
        <img
            src={image}
            alt={title}
            class="rounded-lg shadow-xl w-full"
            onerror="this.onerror=null;this.src='https://placehold.co/600x400/FF4500/FFFFFF?text=Imagen+no+disponible';"
        />
    </div>
    <div class="md:w-1/2">
        <h3 class="text-2xl font-bold mb-3">{title}</h3>
        <p class="text-gray-600">{description}</p>
    </div>
</div>

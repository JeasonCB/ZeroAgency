---
export interface Props {
    title: string;
    subtitle: string;
    ctaText: string;
    ctaSubtext: string;
}

const {
    title = "Tu Negocio Online, Profesional y Listo para Vender. En 72 Horas.",
    subtitle = "Deja de preocuparte por la tecnología. Te entregamos tu logo, una página web que convierte visitantes en clientes y tus redes sociales listas para brillar.",
    ctaText = "QUIERO MI KIT DIGITAL POR SOLO $99.99",
    ctaSubtext = "✅ Pago único. Sin cargos ocultos. Empieza hoy.",
} = Astro.props;
---

<header class="bg-secondary relative">
    <div class="container mx-auto px-6 py-20 md:py-32 text-center lg:px-20">
        <h1
            class="text-4xl md:text-6xl font-bold text-primary leading-tight mb-4"
        >
            {title.split("En 72 Horas.")[0]}<span class="text-accent">
                En 72 Horas.</span
            >
        </h1>
        <h2 class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            {subtitle}
        </h2>
        <a
            href="#contacto"
            class="bg-accent text-black font-bold py-4 px-10 rounded-lg text-lg hover:bg-opacity-90 transition-all shadow-xl inline-block"
        >
            {ctaText}
        </a>
        <p class="mt-4 text-gray-500 text-sm">
            ✅ {ctaSubtext}
        </p>
    </div>

    <!-- Flecha Guía Animada -->
    <a
        href="#servicios"
        aria-label="Ir a la sección de servicios"
        class="absolute bottom-4 lg:botton-8 left-1/2 -translate-x-1/2"
    >
        <div class="w-10 h-10 text-primary animate-bounce">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-full h-full"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m9 12.75 3 3m0 0 3-3m-3 3v-7.5"></path>
            </svg>
        </div>
    </a>
</header>

---
export interface Props {
    icon: string;
    title: string;
    description: string;
}

const { icon, title, description } = Astro.props;
---

<div
    class="bg-secondary p-8 rounded-xl shadow-lg hover:shadow-2xl transition-shadow transform hover:-translate-y-2"
>
    <div
        class="bg-accent text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6"
    >
        <Fragment set:html={icon} />
    </div>
    <h3 class="text-2xl font-bold mb-3">{title}</h3>
    <p class="text-gray-600">{description}</p>
</div>

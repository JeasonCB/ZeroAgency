---
const navItems = [
    { href: "#servicios", text: "Servicios" },
    { href: "#beneficios", text: "Beneficios" },
    { href: "#contacto", text: "Contacto" },
];
---

<nav class="bg-white py-4 px-6 md:px-10 shadow-md sticky top-0 z-50">
    <div class="container mx-auto flex justify-between items-center">
        <a href="#" class="text-2xl font-bold text-primary">ZeroAgency</a>

        <div class="hidden md:flex space-x-8 items-center">
            {
                navItems.map((item) => (
                    <a
                        href={item.href}
                        class="hover:text-accent transition-colors"
                    >
                        {item.text}
                    </a>
                ))
            }
        </div>

        <a
            href="#contacto"
            class="hidden md:block bg-accent text-black font-bold py-2 px-6 rounded-lg hover:bg-opacity-90 transition-all shadow-lg"
        >
            ¡Lanza tu Negocio Ya!
        </a>

        <button id="mobile-menu-button" class="md:hidden text-primary">
            <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </div>

    <!-- Menú móvil -->
    <div id="mobile-menu" class="hidden md:hidden mt-4">
        {
            navItems.map((item) => (
                <a
                    href={item.href}
                    class="block py-2 px-4 text-sm hover:bg-secondary rounded"
                >
                    {item.text}
                </a>
            ))
        }
        <a
            href="#contacto"
            class="block mt-2 w-full text-center bg-accent text-black font-bold py-2 px-6 rounded-lg hover:bg-opacity-90 transition-all shadow-lg"
        >
            ¡Lanza tu Negocio Ya!
        </a>
    </div>
</nav>

<script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });

    document.querySelectorAll("#mobile-menu a").forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
        });
    });
</script>

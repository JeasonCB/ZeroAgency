---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Benefits from "../components/Benefits.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";

const pageTitle =
	"Kit Digital: Tu Página Web y Logo Profesional por $99.99 | Lanza tu Negocio";
const pageDescription =
	"Lanza tu negocio online rápido y sin gastar de más. Nuestro Kit Digital te da una web optimizada para SEO, un logo profesional y tus redes sociales por solo $99.99.";
---

<Layout title={pageTitle} description={pageDescription}>
	<Navbar />
	<Hero
		title="Kit Digital: Tu Página Web y Logo Profesional"
		subtitle="Lanza tu negocio online rápido y sin gastar de más por solo $99.99"
		ctaText="Obtener Mi Kit Digital"
		ctaSubtext="Web optimizada + Logo profesional + Redes sociales"
	/>
	<main>
		<div class="lg:px-16">
			<Services />
		</div>
		<div class="lg:px-16 bg-secondary">
			<Benefits />
		</div>
		<Contact whatsappNumber="+584241276646" />
	</main>
	<Footer />
</Layout>
